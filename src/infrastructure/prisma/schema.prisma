generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id         String       @id @default(uuid())
  city       String
  country    String
  startDate  DateTime     @map("start_date")
  endDate    DateTime     @map("end_date")
  Member     Member[]
  Activities Activities[]
  Attachment Attachment[]

  @@map("trips")
}

model Member {
  id     String  @id @default(uuid())
  tripId String  @default(uuid()) @map("trip_id")
  trip   Trip    @relation(fields: [tripId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  name   String?
  email  String
  owner  Boolean
  status Boolean

  @@map("members")
}

model Activities {
  id     String   @id @default(uuid())
  tripId String   @default(uuid()) @map("trip_id")
  trip   Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  title  String
  date   DateTime
  status Boolean

  @@map("activities")
}

model Attachment {
  id     String @id @default(uuid())
  tripId String @default(uuid()) @map("trip_id")
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  title  String
  link   String

  @@map("attachments")
}
